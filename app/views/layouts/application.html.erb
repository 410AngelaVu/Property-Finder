<!DOCTYPE html>
<html>
  <head>
    <title>PropertyFinder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c7d73dbfbb.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <!-- on which page we are we run that controller -->
    <% if ["public", "devise", "sessions"].include?(controller.controller_name) %>
    <%# if @show_sidebar.nil? %>
    <header>
      <%= render 'layouts/nav/public' %>
      <%= yield %>
    </header>
    <% else %>
    <%= render "layouts/nav/dashboard" %>
    
 
    <%= render "layouts/nav/sidebar" %>
    
    
    <%= yield %>


<% end %>

    <%= render 'layouts/footer' %>
    <div id="notifications"><%= notice %></div>
  </body>
</html>

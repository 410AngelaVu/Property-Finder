<!DOCTYPE html>
<html>
  <head>
    <title>PropertyFinder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c7d73dbfbb.js" crossorigin="anonymous"></script>
  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name %>">
    <% if ["public", "devise", "sessions"].include?(controller.controller_name) %>
    <header>
      <%= render 'layouts/nav/public' %>
      <%= yield %>
    </header>
    <% else %>
    <%= render "layouts/nav/dashboard" %>
    
    <div class="container-fluid">
  <div class="row">
    <%= render "layouts/nav/sidebar" %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <%= yield %>
  </main>
  </div>
</div>
<% end %>
    <%= render 'layouts/footer' %>
    <div id="notifications"><%= notice %></div>
  </body>
</html>

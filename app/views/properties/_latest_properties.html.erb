<% @properties.each do |property| %>
<div class="col-3">
	<div class="border text-center">
	<%= link_to (image_tag property.photo_url, class:'photo-thumbnail pt-3'), property_path(property) if property.photo_url %>
	<h3 class="mt-3"><%= property.name %></h3>
	<p><%= property.address %></p>
	<div class="amenities">
		<span><i class="fas fa-bed"></i>&nbsp;<%= property.rooms %></span>&nbsp;&nbsp;
		<span><i class="fas fa-bath"></i>&nbsp;<%= property.bathrooms %></span>&nbsp;&nbsp;
		<span><i class="fas fa-car"></i>&nbsp;<%= property.parking_space %></span>&nbsp;&nbsp;
	</div>
</div>
</div>
<% end %>
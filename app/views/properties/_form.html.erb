<div class="container-fluid property-new">
  <div class="row">

<%= form_with(model: @property, url: properties_path, method: :post) do |f| %>
  
    <div class="form-group"><br>
      <%= f.label :name, class: 'font-weight-bold d-flex f-0' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control f-1' %>
    </div> 
 
    <div class="form-group"><br>
      <%= f.label :address, class: 'font-weight-bold d-flex f-0' %>
      <%= f.text_area :address, autocomplete: "address", class: 'form-control f-2' %>
    </div> 

     <div class="form-group"><br>
      <%= f.label :price, class: 'font-weight-bold d-flex f-0' %>
      <%= f.number_field :price, autocomplete: "price", class: 'form-control f-2' %>
    </div> 
     <div class="form-group"><br>
      <%= f.label :rooms, class: 'font-weight-bold d-flex f-0' %>
      <%= f.number_field :rooms, autocomplete: "rooms", class: 'form-control f-2' %>
    </div>  
     
     <div class="form-group"><br>
      <%= f.label :bathrooms, class: 'font-weight-bold d-flex f-0' %>
      <%= f.number_field :bathrooms, autocomplete: "bathrooms", class: 'form-control f-2' %>
    </div> 
   
    <div class="form-group"><br>
      <%= f.label :parking_space, class: 'font-weight-bold d-flex f-0' %>
      <%= f.text_area :parking_space, autocomplete: "parking_space", class: 'form-control f-2' %>
    </div> 

    <div class="form-group"><br>
      <%= f.label :details, class: 'font-weight-bold d-flex f-0' %>
      <%= f.text_area :details, autocomplete: "details", class: 'form-control f-2' %>
    </div>

    <div class="form-group"><br><br>
      <%= f.label :photo, class: 'font-weight-bold d-flex m2' %>
      <%= f.file_field :photo, class:'btn btn-secondary' %>
    </div>

    <div class="form-group"><br><br>
      <%= f.submit class:'btn btn-info b-1' %>
    </div><br>
    <% end %>
</div>
</div>